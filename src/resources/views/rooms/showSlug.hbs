<!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Các phòng của chúng tôi</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

<!-- Room Details Section Begin -->
    <section class="room-details-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    
                    <div class="room-details-item">
                        <img src="/img/room/room-details.jpg" alt="">
                        <div class="rd-text">
                            <div class="rd-title">
                                <h3 id="tenphong">{{room.name}}</h3>
                                <div class="rdt-right">
                                    <div class="rating">
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star-half_alt"></i>
                                    </div>
                                    <!-- <a href="#">Chọn phòng</a> -->
                                    <a href="booking.html" onclick="getInfoRoom">Đặt phòng ngay</a>
                                </div>
                            </div>
                            <h2>{{room.price}}<span>/NGÀY</span></h2>
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Diện tích:</td>
                                        <td>{{room.area}}</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Số người tối đa:</td>
                                        <td>{{room.people}}</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Giường:</td>
                                        <td>{{room.bed}}</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Tiện ích phòng:</td>
                                        <td>{{room.extra}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <p class="f-para">{{room.description1}}</p>
                            <p>{{room.description2}}</p>
                        </div>
                    </div>
  
                </div>
            
            </div>
        </div>
    </section>
    <!-- Room Details Section End -->